<?xml version="1.0" encoding="utf-8"?>
<com.isanechek.imagehandler.ui.widgets.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sisi_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/sisi_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:src="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/sisi_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="@dimen/dp8"
        tools:src="@drawable/ic_baseline_radio_button_unchecked_24" />

</com.isanechek.imagehandler.ui.widgets.SquareFrameLayout>
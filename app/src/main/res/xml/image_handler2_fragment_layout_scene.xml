<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--Start scene-->
    <ConstraintSet android:id="@+id/handler_start_scene">

        <!--Top container-->
        <Constraint
            android:id="@+id/ihf2_top_container"
            android:layout_width="@dimen/dp0"
            android:layout_height="@dimen/dp0"
            app:layout_constraintBottom_toTopOf="@id/ihf2_top_hg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--Content-->

<!--        <Constraint-->
<!--            android:id="@id/ihf2_toolbar_info"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            app:layout_constraintBottom_toTopOf="@id/ihf2_top_card_hg"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintStart_toStartOf="parent" />-->

        <Constraint
            android:id="@+id/ihf2_content_container"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp">
            <Layout
                android:layout_width="@dimen/dp0"
                android:layout_height="@dimen/dp0"
                android:layout_marginStart="@dimen/dp8"
                android:layout_marginTop="@dimen/dp8"
                android:layout_marginEnd="@dimen/dp8"
                app:layout_constraintBottom_toTopOf="@id/ihf2_card_hg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ihf2_top_hg" />
        </Constraint>

        <!--Choice-->
        <Constraint
            android:id="@+id/ihf2_choice_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/ihf2_control_hg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ihf2_button_guideline">
            <!--            <CustomAttribute-->
            <!--                app:attributeName="clickable"-->
            <!--                app:customBoolean="true" />-->
        </Constraint>

        <Constraint
            android:id="@id/ihf2_clear_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ihf2_overlay_btn"
            app:layout_constraintStart_toStartOf="parent">
            <PropertySet
                android:alpha="0"
                app:motionProgress="30" />
        </Constraint>

        <Constraint
            android:id="@id/ihf2_overlay_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <PropertySet
                android:alpha="0"
                app:motionProgress="50" />
        </Constraint>

        <Constraint
            android:id="@id/ihf2_save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ihf2_overlay_btn">
            <PropertySet
                android:alpha="0"
                app:motionProgress="80" />
        </Constraint>
        <Constraint
            android:id="@+id/ihf2_info_text"
            app:layout_constraintEnd_toEndOf="@+id/ihf2_choice_btn" />

        <Constraint
            android:id="@+id/ihf2_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/ihf2_choice_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <PropertySet android:visibility="visible" />
        </Constraint>

    </ConstraintSet>

    <!--End scene-->
    <ConstraintSet android:id="@+id/handler_end_scene">

        <!--Top container-->
        <Constraint
            android:id="@+id/ihf2_top_container"
            android:layout_width="@dimen/dp0"
            android:layout_height="@dimen/dp0"
            app:layout_constraintBottom_toTopOf="@id/ihf2_top_hg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--Content-->

<!--        <Constraint-->
<!--            android:id="@id/ihf2_toolbar_info"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            app:layout_constraintBottom_toTopOf="@id/ihf2_top_card_hg"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintStart_toStartOf="parent" />-->
        <Constraint android:id="@+id/ihf2_content_container">
            <Layout
                android:layout_width="@dimen/dp0"
                android:layout_height="@dimen/dp0"
                android:layout_marginStart="@dimen/dp8"
                android:layout_marginTop="@dimen/dp8"
                android:layout_marginEnd="@dimen/dp8"
                app:layout_constraintBottom_toTopOf="@id/ihf2_card_hg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ihf2_top_hg" />
        </Constraint>

        <!--Choice-->
        <Constraint
            android:id="@id/ihf2_choice_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ihf2_content_container">
            <PropertySet
                android:alpha="0"
                app:motionProgress="90" />
            <!--            <CustomAttribute-->
            <!--                app:attributeName="clickable"-->
            <!--                app:customBoolean="false" />-->
        </Constraint>

        <Constraint
            android:id="@id/ihf2_clear_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ihf2_overlay_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ihf2_control_hg">
            <PropertySet
                android:alpha="1"
                app:motionProgress="30" />
        </Constraint>

        <Constraint
            android:id="@id/ihf2_overlay_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ihf2_control_hg">
            <PropertySet
                android:alpha="1"
                app:motionProgress="50" />
        </Constraint>

        <Constraint
            android:id="@id/ihf2_save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ihf2_overlay_btn"
            app:layout_constraintTop_toBottomOf="@id/ihf2_control_hg">
            <PropertySet
                android:alpha="1"
                app:motionProgress="80" />
        </Constraint>

        <Constraint
            android:id="@+id/ihf2_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/ihf2_choice_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ihf2_content_container">
            <PropertySet android:visibility="gone" />
        </Constraint>
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/handler_end_scene"
        app:constraintSetStart="@+id/handler_start_scene"
        app:duration="300"
        app:motionInterpolator="linear">

    </Transition>
</MotionScene>
